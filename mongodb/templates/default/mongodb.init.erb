#!/bin/sh
#
### BEGIN INIT INFO
# Provides:          mongodb
# Required-Start:    $network $local_fs $remote_fs
# Required-Stop:     $network $local_fs $remote_fs
# Should-Start:      $named
# Should-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: MongoDB
# Description:       MongoDB
### END INIT INFO

case "$1" in
  start)
    <%= ::File.join(node['mongodb']['bindir'], 'mongod') %> --config <%= node['mongodb']['conf_filename'] %> --fork
    ;;
  stop)
    <%= ::File.join(node['mongodb']['bindir'], 'mongod') %> --config <%= node['mongodb']['conf_filename'] %> --shutdown || /bin/true
    ;;
  status)
    pgrep -x mongod
    ;;
esac
